<div class="jumbotron jumbotron-fluid" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)),
url('https://images.unsplash.com/photo-1552292511-75e06ec9a7bf?ixlib=rb-1.2.1&ixid=eyJhcHBfaWQiOjEyMDd9&auto=format&fit=crop&w=2550&q=80')
">
  <div class="container" >
    <h1 class="display-4" style="color: grey"><strong>Mister Cocktail</strong></h1>
    <p class="lead" style="color: red">A modern, co-operative library of cocktails and their ingredients.</p>
  </div>
</div>

<div class="container">

  <br>
  <br>

  <h2>All our cocktails (<%= @cocktails.length %>)</h2>

  <div class="cards">
    <% @cocktails.each do |cocktail| %>
      <% if cocktail.photo.attached? %>
        <div class="card" style="background-image:
        url('<%= cl_image_path cocktail.photo.key %>'
        )">
          <h3 style="color: red"><strong><%= cocktail.name %></strong></h3>
          <button type="button" class="btn btn-outline-primary" id="more-info">
            <%= link_to 'More info', cocktail_path(cocktail) %>
          </button>
        </div>

      <% else %>
        <div class="card">
          <h3><%= cocktail.name %></h3>
          <button type="button" class="btn btn-outline-primary" id="more-info">
            <%= link_to 'More info', cocktail_path(cocktail) %>
          </button>
        </div>
      <% end %>

    <% end %>
  </div>

  <br>

</div>
